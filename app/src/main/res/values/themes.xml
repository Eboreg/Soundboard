<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Splashscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/splashscreen_background_start
        </item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/splashscreen_background_end
        </item>
    </style>

    <style name="Base.Soundboard.Theme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimary</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">?attr/colorPrimary</item>

        <item name="actionBarSize">@dimen/actionbar_height</item>
        <item name="actionBarStyle">@style/Soundboard.Style.Toolbar</item>
        <item name="actionModeStyle">@style/Soundboard.Style.ActionMode</item>
        <item name="popupMenuBackground">?attr/colorPrimary</item>
        <item name="alertDialogTheme">@style/Soundboard.Theme.MaterialAlertDialog</item>
        <item name="materialAlertDialogTheme">@style/Soundboard.Theme.MaterialAlertDialog</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Soundboard.Theme" parent="Base.Soundboard.Theme">
        <item name="colorPrimary">@color/blue_grey_200</item>
        <item name="colorPrimaryDark">@color/blue_grey_500</item>
        <item name="colorPrimaryVariant">@color/blue_grey_100</item>
        <item name="colorOnPrimary">@color/light_bg_dark_primary_text</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/light_bg_dark_primary_text</item>
        <item name="colorAccent">@color/teal_300</item>
    </style>

    <style name="Soundboard.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Soundboard.Theme.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Soundboard.Style.Button.TextButton</item>
        <item name="buttonBarButtonStyle">@style/Soundboard.Style.Button.TextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Soundboard.Style.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Soundboard.Style.Button.TextButton.Negative
        </item>
        <item name="materialAlertDialogTitleTextStyle">@style/Soundboard.Style.Title.Text</item>
    </style>

    <style name="Soundboard.Theme.MaterialAlertDialog.EqualButtons">
        <item name="buttonBarNegativeButtonStyle">@style/Soundboard.Style.Button.TextButton</item>
    </style>
</resources>