<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MaterialTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorControlNormal">@color/on_secondary_subdued</item>

        <item name="materialButtonStyle">@style/Soundboard.Button</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorSecondary</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">?attr/colorSecondary
        </item>

        <item name="actionBarSize">@dimen/actionbar_height</item>
        <item name="actionBarStyle">@style/Soundboard.Toolbar</item>
        <item name="actionBarTheme">@style/Soundboard.ActionBar.Theme</item>
        <item name="actionModeStyle">@style/Soundboard.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
</resources>