<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Soundboard.NightButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?android:attr/colorBackground</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Soundboard.Bar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="titleTextColor">?attr/colorOnSecondary</item>
        <item name="subtitleTextColor">?attr/colorOnSecondary</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
    </style>

    <style name="Widget.Soundboard.ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="background">@android:color/transparent</item>
    </style>
</resources>