<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Soundboard.Style.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="Soundboard.Style.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/alert_dialog_button</item>
    </style>

    <style name="Soundboard.Style.Button.TextButton.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_on_surface_subdued</item>
    </style>

    <style name="Soundboard.Style.Toolbar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Soundboard.Style.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/title_text</item>
    </style>

    <style name="Soundboard.Style.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:popupBackground">?attr/colorBackgroundFloating</item>
        <item name="android:popupElevation">@dimen/margin_small</item>
        <item name="android:popupEnterTransition" tools:targetApi="n">@null</item>
        <item name="android:popupExitTransition" tools:targetApi="n">@null</item>
    </style>

    <style name="Soundboard.Style.Spinner.Item" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:padding">@dimen/margin_normal</item>
    </style>

    <style name="Soundboard.Style.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupEnterTransition" tools:targetApi="n">@null</item>
        <item name="android:popupExitTransition" tools:targetApi="n">@null</item>
    </style>

</resources>