<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Soundboard.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Soundboard.ActionBar.Theme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/on_secondary_subdued</item>
    </style>

    <style name="Soundboard.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Soundboard.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorSecondary</item>
    </style>
</resources>