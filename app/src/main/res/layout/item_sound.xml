<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="us.huseli.soundboard_kotlin.viewmodels.SoundViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:menu="@menu/sound_context_menu">

        <!--suppress Annotator -->
        <androidx.cardview.widget.CardView
            android:id="@+id/sound_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_normal"
            app:cardBackgroundColor="@{viewModel.backgroundColor}"
            app:cardCornerRadius="@dimen/sound_card_corner_radius"
            app:cardElevation="@dimen/sound_card_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:cardBackgroundColor="@color/deep_purple_500">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/sound_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_small"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@{viewModel.name}"
                    android:textAlignment="center"
                    android:textColor="@{viewModel.textColor}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Sound name" />

                <ImageView
                    android:id="@+id/play_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription=""
                    android:visibility="invisible"
                    app:drawableColor="@{viewModel.textColor}"
                    app:layout_constraintBottom_toTopOf="@+id/volume_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_playing"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/fail_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription=""
                    android:visibility="invisible"
                    app:drawableColor="@{viewModel.textColor}"
                    app:layout_constraintBottom_toTopOf="@+id/volume_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_fail"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/selected_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80B2EBF2"
                    android:contentDescription=""
                    android:visibility="invisible"
                    app:drawableColor="@{viewModel.textColor}"
                    app:layout_constraintBottom_toTopOf="@+id/volume_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_check"
                    tools:ignore="ContentDescription" />

                <ProgressBar
                    android:id="@+id/volume_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:max="100"
                    android:min="0"
                    android:progress="@{viewModel.volume}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sound_name"
                    tools:ignore="UnusedAttribute"
                    tools:progress="50" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

